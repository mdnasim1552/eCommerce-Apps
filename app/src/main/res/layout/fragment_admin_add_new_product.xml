<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminAddNewProductFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/slogan_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Add New Product"
            android:textAlignment="center"
            android:textSize="26sp"
            android:textStyle="bold"
            />



        <LinearLayout
            android:id="@+id/linear1_category_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/slogan_category"
            android:layout_marginTop="10dp"
            android:weightSum="4">

            <ImageView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/t_shirts"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:src="@drawable/tshirts"
                />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/sports_t_shirts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/sports"
                />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/female_dresses"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/female_dresses"
                />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/sweathers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/sweather"
                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/linear2_category_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/linear1_category_layout"
            android:weightSum="4"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_weight="1"
                android:id="@+id/glasses"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/glasses" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/purses_bags_wallets"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/purses_bags"
                />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/hats_caps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/hats"
                />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/shoes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/shoess"
                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/linear3_category_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/linear2_category_layout"
            android:layout_marginTop="10dp"
            android:weightSum="4">

            <ImageView
                android:layout_weight="1"
                android:id="@+id/headphones_handfree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/headphoness"
                />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/laptop_pc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/laptops"
                />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/watches"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/watches"
                />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/mobilephones"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/mobiles"
                />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>