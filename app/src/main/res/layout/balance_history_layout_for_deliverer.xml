<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="7"
    android:layout_marginBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:padding="4dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/border_for_balance_sheet"
        android:id="@+id/balance_date_deliverer"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:text="Aug 18, 2021 05:04:20 AM"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <TextView
        android:padding="4dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/border_for_balance_sheet"
        android:id="@+id/balance_amount_deliverer"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:text="1100 Tk"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <TextView
        android:padding="4dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/border_for_balance_sheet"
        android:id="@+id/balance_invoice_number_deliverer"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:text="#1032"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
</LinearLayout>