<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:background="@color/purple_500">
        <TextView
            android:background="@drawable/while_button_design"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="@android:color/holo_red_dark"
            android:text="Signal"
            android:id="@+id/delivered_Signal_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/headline_usname_number"
            android:layout_below="@+id/delivered_Signal_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/order_user_name"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="UserName"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_marginLeft="2dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/order_phone_number"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Phone Number"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_marginRight="2dp"
                android:textStyle="bold"
                />

        </RelativeLayout>



        <TextView
            android:layout_below="@+id/headline_usname_number"
            android:id="@+id/order_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Price"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/order_address_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address, City"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/order_total_price"
            android:gravity="center"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Time"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/order_address_city"
            android:gravity="center"
            android:layout_marginTop="15dp"
            />

        <Button
            android:id="@+id/show_all_products_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="29dp"
            android:text="Show This Order Products"
            android:textColor="@color/purple_500"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:background="@drawable/while_button_design"
            android:layout_below="@+id/order_date_time"
            />

        <Button
            android:id="@+id/see_profile_of_the_delivery_man"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="See Profile Of The Delivery Man"
            android:textColor="@color/purple_500"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:background="@drawable/while_button_design"
            android:layout_below="@+id/show_all_products_btn"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>