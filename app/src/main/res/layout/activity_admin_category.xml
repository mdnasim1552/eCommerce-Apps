<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="15dp"
    android:fillViewport="true"
    tools:context=".Admin.AdminCategoryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/slogan_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Add New Product"
            android:textAlignment="center"
            android:textSize="26sp"
            android:textStyle="bold"
            />



        <LinearLayout
            android:id="@+id/linear1_category_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/slogan_category"
            android:layout_marginTop="10dp"
            android:weightSum="4">

            <ImageView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/t_shirts"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:src="@drawable/tshirts"
                />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/sports_t_shirts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/sports"
                />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/female_dresses"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/female_dresses"
                />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/sweathers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/sweather"
                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/linear2_category_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/linear1_category_layout"
            android:weightSum="4"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_weight="1"
                android:id="@+id/glasses"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/glasses" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/purses_bags_wallets"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/purses_bags"
                />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/hats_caps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/hats"
                />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/shoes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/shoess"
                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/linear3_category_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/linear2_category_layout"
            android:layout_marginTop="10dp"
            android:weightSum="4">

            <ImageView
                android:layout_weight="1"
                android:id="@+id/headphones_handfree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/headphoness"
                />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/laptop_pc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/laptops"
                />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/watches"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/watches"
                />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/mobilephones"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/mobiles"
                />

        </LinearLayout>


        <Button
            android:id="@+id/approve_new_product_btn"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_above="@+id/maintain_btn"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttons"
            android:text="Approve New Product"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textAllCaps="false"
            />


        <Button
            android:id="@+id/maintain_btn"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_above="@+id/check_orders_btn"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttons"
            android:text="Maintain Products"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/check_orders_btn"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_above="@+id/admin_logout_btn"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttons"
            android:text="Check New Orders"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textAllCaps="false"
            />


        <Button
            android:id="@+id/admin_logout_btn"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/buttons"
            android:text="Logout"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textAllCaps="false"
            />

    </RelativeLayout>

</ScrollView>